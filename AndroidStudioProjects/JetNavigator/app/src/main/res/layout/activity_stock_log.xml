<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
        <TextView
                android:text="송장 : "
                android:id="@+id/STOCK_LOG_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/STOCK_LOG_ACTIVITY_INVOICE_SEARCH_EDIT_TEXT"
                android:layout_toRightOf="@+id/STOCK_LOG_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_width="250dp"
                android:layout_height="50dp"/>

        <TextView
                android:text="송장 : "
                android:id="@+id/STOCK_LOG_ACTIVITY_RESULT_TITLE_TEXT_VIEW"
                android:layout_width="wrap_content"
                android:layout_below="@id/STOCK_LOG_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:gravity="center"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/STOCK_LOG_ACTIVITY_RESULT_EDIT_TEXT"
                android:layout_toRightOf="@+id/STOCK_LOG_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_below="@+id/STOCK_LOG_ACTIVITY_INVOICE_SEARCH_EDIT_TEXT"
                android:layout_width="250dp"
                android:layout_height="50dp"/>
        <TextView
                android:text="옵션 : "
                android:id="@+id/STOCK_LOG_ACTIVITY_OPTION_TEXT_VIEW"
                android:layout_width="wrap_content"
                android:layout_below="@id/STOCK_LOG_ACTIVITY_RESULT_TITLE_TEXT_VIEW"
                android:gravity="center"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/STOCK_LOG_ACTIVITY_OPTION_EDIT_TEXT"
                android:layout_toRightOf="@+id/STOCK_LOG_ACTIVITY_OPTION_TEXT_VIEW"
                android:layout_below="@+id/STOCK_LOG_ACTIVITY_RESULT_EDIT_TEXT"
                android:layout_width="250dp"
                android:layout_height="50dp"/>

        <Button
                android:id="@+id/STOCK_LOG_ACTIVITY_INVOICE_SEARCH_BTN"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="조회"
                android:layout_toRightOf="@+id/STOCK_LOG_ACTIVITY_RESULT_EDIT_TEXT"/>
        <Button
                android:id="@+id/STOCK_LOG_ACTIVITY_RESET_BTN"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="초기화"
                android:layout_toRightOf="@+id/STOCK_LOG_ACTIVITY_RESULT_EDIT_TEXT"
                android:layout_below="@+id/STOCK_LOG_ACTIVITY_INVOICE_SEARCH_BTN"/>


        <ListView
                android:id="@+id/STOCK_LOG_ACTIVITY_LIST_VIEW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/STOCK_LOG_ACTIVITY_RESET_BTN">

        </ListView>



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>