<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/STOCK_LOC_STOCK_IN_RELATIVE"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/STOCK_LOC_STOCK_IN_BARCODE_TEXTVIEW"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="바코드 : "
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <EditText
                android:id="@+id/STOCK_LOC_STOCK_IN_BARCODE_EDITTEXT"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/STOCK_LOC_STOCK_IN_BARCODE_TEXTVIEW"/>

        <Button
                android:text="조회"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/STOCK_LOC_STOCK_IN_BARCODE_EDITTEXT"/>
        <TextView
                android:id="@+id/STOCK_LOC_STOCK_IN_PRO_NAME_TITLE_TEXTVIEW"
                android:text="상품명 : "
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/STOCK_LOC_STOCK_IN_BARCODE_EDITTEXT"/>
            <TextView
                    android:id="@+id/STOCK_LOC_STOCK_IN_PRO_NAME_TEXTVIEW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/STOCK_LOC_STOCK_IN_PRO_NAME_TITLE_TEXTVIEW"
                    android:layout_below="@id/STOCK_LOC_STOCK_IN_BARCODE_EDITTEXT"/>
        <TextView
                android:id="@+id/STOCK_LOC_STOCK_IN_OPTION_TITLE_TEXTVIEW"
                android:text="옵션 : "
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/STOCK_LOC_STOCK_IN_PRO_NAME_TITLE_TEXTVIEW"/>
        <TextView
                android:id="@+id/STOCK_LOC_STOCK_IN_OPTION_TEXTVIEW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/STOCK_LOC_STOCK_IN_OPTION_TITLE_TEXTVIEW"
                android:layout_below="@id/STOCK_LOC_STOCK_IN_PRO_NAME_TEXTVIEW"/>

        <ListView
                android:id="@+id/STOCK_LOC_STOCK_IN_LIST_VIEW"
                android:layout_below="@id/STOCK_LOC_STOCK_IN_OPTION_TEXTVIEW"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        <TextView
                android:text="입고할 상품을 스캔하세요"
                android:id="@+id/STOCK_LOC_STOCK_IN_LIST_FOOTER"
                android:layout_below="@+id/STOCK_LOC_STOCK_IN_LIST_VIEW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    <RelativeLayout
            android:layout_below="@+id/STOCK_LOC_STOCK_IN_LIST_FOOTER"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:hint="로케이션"
                android:id="@+id/STOCK_LOC_STOCK_IN_LOCATION_EDITTEXT"
                android:layout_width="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"/>
        <EditText
                android:id="@+id/STOCK_LOC_STOCK_IN_QUANTITY_EDITTEXT"
                android:hint="수량"
                android:layout_width="200dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/STOCK_LOC_STOCK_IN_LOCATION_EDITTEXT"/>
        <Button
                android:text="초기화"
                android:id="@+id/STOCK_LOC_STOCK_IN_RESET_BTN"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/STOCK_LOC_STOCK_IN_LOCATION_EDITTEXT"/>
        <Button
                android:text="재고입고"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/STOCK_LOC_STOCK_IN_LOCATION_EDITTEXT"
                android:layout_toRightOf="@+id/STOCK_LOC_STOCK_IN_RESET_BTN"/>
    </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>