<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
    <TextView
            android:id="@+id/INVOICE_LISTVIEW_ITEM_SEQ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFF88"/>
    <TextView
            android:id="@+id/INVOICE_LISTVIEW_ITEM_CONTENT"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/INVOICE_LISTVIEW_ITEM_SEQ"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/INVOICE_LISTVIEW_ITEM_STATUS"
            android:layout_toRightOf="@id/INVOICE_LISTVIEW_ITEM_SEQ"
            android:layout_below="@id/INVOICE_LISTVIEW_ITEM_CONTENT"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/INVOICE_LISTVIEW_OWNER"
            android:layout_below="@id/INVOICE_LISTVIEW_ITEM_CONTENT"
            android:layout_toRightOf="@+id/INVOICE_LISTVIEW_ITEM_STATUS"
            android:layout_toEndOf="@+id/INVOICE_LISTVIEW_ITEM_STATUS" android:layout_marginLeft="0dp"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>