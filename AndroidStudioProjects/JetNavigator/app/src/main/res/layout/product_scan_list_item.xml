<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_PRSEQ"
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_PRNAME"
                android:layout_toRightOf="@+id/PRODUCT_SCAN_LIST_ITEM_PRSEQ"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_OPTION"
                android:layout_toRightOf="@+id/PRODUCT_SCAN_LIST_ITEM_PRNAME"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_PRID"
                android:layout_toRightOf="@+id/PRODUCT_SCAN_LIST_ITEM_OPTION"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_BARCODE"
                android:layout_toRightOf="@+id/PRODUCT_SCAN_LIST_ITEM_OPTION"
                android:layout_below="@+id/PRODUCT_SCAN_LIST_ITEM_PRID"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_QTY"
                android:layout_toRightOf="@+id/PRODUCT_SCAN_LIST_ITEM_PRID"
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/PRODUCT_SCAN_LIST_ITEM_SCAN"
                android:layout_toRightOf="@+id/PRODUCT_SCAN_LIST_ITEM_QTY"
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>