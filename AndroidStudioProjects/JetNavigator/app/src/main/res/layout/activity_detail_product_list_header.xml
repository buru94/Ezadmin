<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/pink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/DETAIL_PRODUCT_ACTIVITY_LIST_PRODUCT_ID"
                android:gravity="center"
                android:text="상품코드"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/DETAIL_PRODUCT_ACTIVITY_LIST_PRODUCT_SOLDOUT"
                android:text="품절"
                android:gravity="center"
                android:layout_width="38dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/DETAIL_PRODUCT_ACTIVITY_LIST_PRODUCT_TEMPORARILY_SOLDOUT"
                android:text="임시품절"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/DETAIL_PRODUCT_ACTIVITY_LIST_PRODUCT_OPTION"
                android:text="옵션"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/DETAIL_PRODUCT_ACTIVITY_LIST_PRODUCT_BARCODE"
                android:text="바코드"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/DETAIL_PRODUCT_ACTIVITY_LIST_PRODUCT_CURRENT_STOCK"
                android:text="현재고"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>