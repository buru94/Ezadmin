<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">
        <TextView
                android:text="송장 : "
                android:id="@+id/STOCK_IN_OUT_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/STOCK_IN_OUT_ACTIVITY_INVOICE_SEARCH_EDIT_TEXT"
                android:layout_toRightOf="@+id/STOCK_IN_OUT_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        <TextView
                android:text="바코드 : "
                android:id="@+id/STOCK_IN_OUT_ACTIVITY_RESULT_TITLE_TEXT_VIEW"
                android:layout_width="wrap_content"
                android:layout_below="@id/STOCK_IN_OUT_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:gravity="center"
                android:layout_height="50dp"/>
        <EditText
                android:id="@+id/STOCK_IN_OUT_ACTIVITY_RESULT_EDIT_TEXT"
                android:layout_toRightOf="@+id/STOCK_IN_OUT_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_below="@+id/STOCK_IN_OUT_ACTIVITY_INVOICE_SEARCH_EDIT_TEXT"
                android:layout_toEndOf="@+id/STOCK_IN_OUT_ACTIVITY_RESULT_TITLE_TEXT_VIEW"
                android:layout_width="230dp"
                android:layout_height="50dp"/>
        <Button
                android:id="@+id/STOCK_IN_OUT_ACTIVITY_SEARCH_BTN"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="초기화"
                android:layout_alignRight="@+id/STOCK_IN_OUT_ACTIVITY_RESULT_EDIT_TEXT"
                android:layout_alignEnd="@+id/STOCK_IN_OUT_ACTIVITY_RESULT_EDIT_TEXT"
                android:layout_below="@+id/STOCK_IN_OUT_ACTIVITY_INVOICE_SERACH_TITLE_TEXT_VIEW"
                android:layout_marginTop="0dp" android:layout_marginRight="-78dp" android:layout_marginEnd="-78dp"/>


        <ListView
                android:id="@+id/STOCK_ACTIVITY_LIST_VIEW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/STOCK_IN_OUT_ACTIVITY_RESULT_EDIT_TEXT">

        </ListView>



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>