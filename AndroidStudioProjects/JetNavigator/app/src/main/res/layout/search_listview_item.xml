<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/TRANS_ACTIVITY_LIST_VIEW_ITEM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/SEARCH_LIST_PRSEQ_TEXTVIEW"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SEARCH_LIST_PRNAME_TEXTVIEW"
                android:layout_toRightOf="@id/SEARCH_LIST_PRSEQ_TEXTVIEW"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="210dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/SEARCH_LIST_OPTION_TEXTVIEW"
                android:layout_below="@id/SEARCH_LIST_PRNAME_TEXTVIEW"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SEARCH_LIST_BARCODE_TEXTVIEW"
                android:layout_toRightOf="@+id/SEARCH_LIST_PRID_TEXTVIEW"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="70dp"
                android:layout_height="40dp"/>
        <TextView
                android:id="@+id/SEARCH_LIST_PRID_TEXTVIEW"
                android:layout_toRightOf="@id/SEARCH_LIST_OPTION_TEXTVIEW"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="70dp"
                android:layout_height="40dp"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>